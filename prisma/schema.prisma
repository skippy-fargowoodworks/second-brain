generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:/app/data/second-brain.db"
}

model Task {
  id            String      @id @default(cuid())
  title         String
  description   String?
  status        String      @default("backlog")
  priority      String?
  dueDate       DateTime?
  createdAt     DateTime    @default(now())
  updatedAt     DateTime    @updatedAt
  projectId     String?
  tags          String?
  notes         String?
}

model Note {
  id        String    @id @default(cuid())
  title     String
  content   String
  tags      String?
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
